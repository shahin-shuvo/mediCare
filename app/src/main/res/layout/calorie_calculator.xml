<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calorie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/colorPrimary"
    tools:context="com.example.shuvo.medicare.physicalFitness.physical_fitness">


    <Button
        android:id="@+id/btnBack"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cal_header"
        android:text="Calculate Calorie"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#ECEFF1"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:padding="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/btnBack"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:layout_marginRight="2dp"
                android:src="@drawable/height_scale"
                />
            <EditText
                android:id="@+id/HeightField"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:background="#ffff"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:hint="Height"
                android:textColorHint="#BDBDBD"
                android:inputType="number"

                android:paddingLeft="5dp"
                android:paddingRight="0dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="cm"
                android:gravity="center_vertical"
                android:textColor="#03A9F4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:padding="2dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/weight_machine"
                android:scaleType="centerCrop"
                android:layout_marginRight="2dp" />
            <EditText
                android:id="@+id/WeightField"
                android:paddingStart="6dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:background="#ffff"
                android:hint="Weight"
                android:textColorHint="#BDBDBD"
                android:inputType="number"
                android:paddingLeft="6dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="kg"
                android:gravity="center_vertical"
                android:textColor="#03A9F4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#ffff"
                android:layout_marginEnd="2dp"
                android:src="@drawable/age"
                android:padding="2dp"
                android:layout_marginRight="2dp" />
            <EditText
                android:id="@+id/txtAge"
                android:paddingStart="6dp"
                android:paddingEnd="0dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#03A9F4"
                android:background="#ffff"
                android:hint="Age"
                android:textColorHint="@color/colorDivider"
                android:inputType="number"
                android:paddingLeft="6dp"
                android:paddingRight="0dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#ffff"
                android:text="Years"
                android:gravity="center_vertical"
                android:textColor="#03A9F4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Gender"
                android:textColor="#03A9F4"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:paddingLeft="10dp"
                android:paddingRight="0dp" />
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/male_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/male"
                    android:padding="3dp"
                    android:clickable="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                >
                <ImageView
                    android:id="@+id/female_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#ffff"
                    android:src="@drawable/female"
                    android:clickable="true" />

            </RelativeLayout>


        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Daily Activity"
            android:textColor="#03A9F4"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:paddingLeft="10dp"
            android:paddingRight="0dp" />
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/low"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="#ffff"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/active1"
                android:clickable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Low"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="2dp"
            android:padding="0dp"
            android:layout_marginRight="2dp">
            <ImageView
                android:id="@+id/medium_active"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="#ffff"
                android:src="@drawable/ic_directions_walk_black_24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="Medium"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/img_high"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:background="#ffff"
                android:src="@drawable/active3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:clickable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="High"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:gravity="center"
                />
        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/calculate"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cal_header"
        android:text="Calculate"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#ECEFF1"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:layout_marginTop="360dp"
        android:padding="15dp"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/calculate"></LinearLayout>


</RelativeLayout>