<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_pill_final"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation=".5dp"
    card_view:contentPadding="4dp"
    card_view:cardBackgroundColor="#1e90ff"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="#FFEBEE"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/medicon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pill_choto"/>



        <ImageButton
            android:id="@+id/delete_cvp"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout="@+id/edit_cvp"
            android:clickable="true"
            android:src="@drawable/ic_delete_black_24dp"
            android:background="#FFEBEE"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/nameHeader"
            android:layout_below="@+id/medicon"
            android:layout_marginTop="6dp"
            android:text="Medicine:"
            android:textColor="@color/main_text_color"
            android:textSize="20dp"
            android:background="#FFEBEE"
           />
        <TextView
            android:id="@+id/name_cvp"
            android:layout_width="330dp"
            android:layout_marginLeft="100dp"
            android:layout_height="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Medicine:"
            android:background="#FFEBEE"
            android:textColor="@color/main_text_color"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/nameHeader"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />
        <TextView
            android:id="@+id/details_cvp"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:lines="2"
            android:layout_below="@+id/nameHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:textSize="20dp"
            android:textColor="@color/main_text_color"
            android:background="#B2DFDB"/>
        <TextView
            android:id="@+id/date_cvp"
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:background="#A5D6A7"
            android:layout_below="@+id/details_cvp"
            android:text="Date"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/main_text_color" />
        <TextView
            android:id="@+id/timet_cvp"
            android:layout_width="255dp"
            android:layout_height="30dp"
            android:background="#A5D6A7"
            android:layout_alignBaseline="@+id/date_cvp"
            android:layout_marginLeft="130dp"
            android:layout_below="@+id/details_cvp"
            android:textSize="20dp"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/main_text_color" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
